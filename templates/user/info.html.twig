{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="container">
            <div class="row m-y-2">
                <div class="col-lg-8 push-lg-4">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profile</a>
                        </li>
                    </ul>
                    <div class="tab-content p-b-3">
                        <div class="tab-pane active" id="profile">
                            <h4 class="m-y-2">User Profile</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>About</h4>
                                    <p>
                                       name : {{ user.name }}
                                    </p>
                                    <p>
                                        email : {{ user.email }}
                                    </p>
                                    <p>
                                        salary : {{ user.salary }}
                                    </p>
                                    <p>
                                        country : {{ user.country }}
                                    </p>
                                    <p>
                                        TimeZone : {{ user.timeZone }}
                                    </p>
                                    <p>
                                        Role : {{ role.name }}
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <h4>Date and time</h4>
                                    <p>
                                        Current date time: {{ "now"|date("d/m/Y H:i", "Europe/Berlin") }}
                                    </p>
                                    <p>
                                        User date time: {{ "now"|date("d/m/Y H:i", user.timeZone) }}
                                    </p>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 pull-lg-8 text-xs-center">
                    <img src="https://picsum.photos/150/150?random" class="m-x-auto img-fluid img-circle" alt="avatar">
                </div>
            </div>
        </div>
        <hr>
    </div>
{% endblock %}
